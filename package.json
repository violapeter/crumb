{
  "name": "crumb",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "build:cli": "tsc --project tsconfig.cli.json",
    "start": "node dist/src/cli/index.js",
    "dev": "ts-node ./src/cli/index.ts",
    "package": "pkg . --out-path=bin"
  },
  "bin": {
    "crumb": "dist/src/cli/index.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "typescript": "^5.8.3"
  },
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "bin"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/__tests__/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false
  }
}
