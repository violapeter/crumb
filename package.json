{
  "name": "crumbjs",
  "version": "1.0.0",
  "main": "lib/cjs/index.js",
  "author": {
    "name": "PÃ©ter Viola",
    "email": "info@violapeter.hu",
    "url": "https://violapeter.hu"
  },
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc -p .buildconfig/tsconfig.mjs.json && tsc -p .buildconfig/tsconfig.cjs.json && .buildconfig/fixup",
    "build:cli": "tsc --project .buildconfig/tsconfig.cli.json",
    "start": "node ./lib/cli/src/cli/index.js",
    "dev": "ts-node ./src/cli/index.ts",
    "package": "pkg . --out-path=bin",
    "type-check": "tsc -p .buildconfig/tsconfig.json --noEmit"
  },
  "bin": {
    "crumb": "lib/cli/src/cli/index.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "typescript": "^5.8.3"
  },
  "module": "lib/mjs/index.js",
  "exports": {
    ".": {
      "import": "./lib/mjs/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "types": "./types.d.ts",
  "files": [
    "lib",
    "src",
    "index.ts",
    "types.d.ts"
  ],
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "bin"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": ".buildconfig/tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/__tests__/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false
  },
  "packageManager": "yarn@1.22.19+sha1.4ba7fc5c6e704fce2066ecbfb0b0d8976fe62447"
}
