{
  "name": "test-runner",
  "scripts": {
    "initialize": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/../../"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
