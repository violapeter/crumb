{
  "name": "test-runner",
  "scripts": {
    "initialize": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.2",
    "typescript": "^5.5.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/../../"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/__tests__/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
